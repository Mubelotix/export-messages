{
  "description": "Export Discord and Instagram channel messages",
  "manifest_version": 2,
  "name": "message-exporter",
  "version": "1.0",

  "permissions": [
    "webRequest",
    "https://*.discord.com/*",
    "https://*.instagram.com/*",
    "downloads"
  ],

  "background": {
    "scripts": ["background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["https://*.discord.com/*", "https://*.instagram.com/*"],
      "js": ["content.js"]
    }
  ]
}